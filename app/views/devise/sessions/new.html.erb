<div class="wrapper-grey">
	<div class="form-login container">
		<h2>Log in</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  </div>          
		  <div class="form-actions">
		    <%= f.button :submit, "Log in", class: "btn btn-primary beaco-button-pink" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	<div class="footer">
		<div class="footer-main text-center">
			<p>Copyright (c) 2016 Bea & Co.</p>
				<%= link_to "https://www.instagram.com/beacouk/" do %>
	    		<i class="fa fa-instagram"></i>
				<% end %>
				<%= link_to "https://www.facebook.com/beaandcouk" do %>
	    		<i class="fa fa-facebook"></i>
				<% end %>
				<%= link_to "https://twitter.com/beacoUK" do %>
	    		<i class="fa fa-twitter"></i>
				<% end %>
		</div>
	</div>
</div>