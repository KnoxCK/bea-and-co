  				<div class="our-story-icon">
  					<i class="fa fa-heart-o"></i>
  				</div>
  				<div class="our-story-text">
  					<h4><%= story_par.title %></h4>
  					<p><%= story_par.content %></p>
  				</div>
  			</div>
      <% end %>w
		</div>
	</div>
</div>

<!-- Third section - Our Services -->
