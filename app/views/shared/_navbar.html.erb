<div class="navbar-beaco navbar-beaco-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-beaco-brand" do %>
    <%= image_tag "logo_small.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-beaco-right hidden-xs hidden-sm">


    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-beaco-item navbar-beaco-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-beaco-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-beaco-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-beaco-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->
      <!--<%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-beaco-item navbar-beaco-link" %>

    <% end %>
    
<!-- Navbar menu -->
    <!-- Home link -->
    <%= link_to "HOME", "#", class: " navbar-beaco-link" %>
    <!-- About link -->
    <%= link_to "ABOUT", "#about", class: " navbar-beaco-link" %>
    <!-- Our Story link -->
    <%= link_to "OUR STORY", "#our-story", class: " navbar-beaco-link" %>
    <!-- Blog  link -->
    <%= link_to "BLOG", "#", class: " navbar-beaco-link" %>
    <!-- Services link -->
    <%= link_to "SERVICES", "#services", class: " navbar-beaco-link" %>
    <!-- Our Team link -->
    <%= link_to "OUR TEAM", "#our-team", class: " navbar-beaco-link" %>
    <!-- Happy People link -->
    <%= link_to "HAPPY PEOPLE", "#happy-people", class: "navbar-beaco-link" %>
    <!-- Chaperones link -->
    <%= link_to "CHAPERONES", "#", class: " navbar-beaco-link" %>    
    <!-- Contact link -->
    <%= link_to "CONTACT", "#contact", class: " navbar-beaco-link" %>    
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-beaco-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-beaco-dropdown-menu">
        <li><a href="#">HOME</a></li>
        <li><a href="#about">ABOUT</a></li>
        <li><a href="#our-story">OUR STORY</a></li>
        <li><a href="#">BLOG</a></li>
        <li><a href="#services">SERVICES</a></li>
        <li><a href="#our-team">OUR TEAM</a></li>
        <li><a href="#happy-people">HAPPY PEOPLE</a></li>
        <li><a href="#">CHAPERONES</a></li>
        <li><a href="#contact">CONTACT</a></li>
      </ul>
    </div>
  </div>
</div>

