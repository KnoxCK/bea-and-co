<!-- Contact -->
<div class="contact-wrapper">
<div class="section-padding contact-banner" id="contact" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('http://res.cloudinary.com/ddota4fci/image/upload/o_84/v1474454415/Children_silhoutte_balloons_ge433c.jpg');">
	<div class="contact-content">
		<div class="contact-left-column">
			<h4>CONTACT US DIRECT</h4>
      <p><i class="fa fa-phone"></i>
      <a href="tel:+44-203-488-1184">+44(0) 20 3488 1184</a></p>
			<p><i class="fa fa-envelope"></i>
			<%= link_to "hello@beaandco.com", "mailto:hello@beaandco.com" %>
			</p>
		</div>
		<div class="contact-right-column">
			<h4>SEND US A MESSAGE</h4>
      <form id="contact-form-home" action="http://formspree.io/hello@beaandco.com" method="POST">
        <label>
          <span>Your Name</span><input class="contact-input" type="text" name="Contact Name" style="color: black;">
        </label>
        <label>
          <span>Your Phone Number</span><input class="contact-input" type="tel" name="Contact Phone" style="color: black;">
        </label>
        <label>
          <span>Referred by?</span><input class="contact-input" type="text" name="Referred by" style="color: black;">
        </label>
        <label>
          <span>Your Email</span><input class="contact-input" type="email" name="Contact Email" style="color: black;">
        </label>
        <label>
          <span>Your Message</span><textarea id="contact-message" name="Message Body" style="color: black;"></textarea>
          <input class="btn btn-primary beaco-button-pink submit-button-beaco" type="submit" value="Send" style="color: white;">
        </label>
      </form>
		</div>
	</div>
</div>
