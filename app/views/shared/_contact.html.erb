<!-- Contact -->
<div class="contact-wrapper">
<div class="section-padding contact-banner" id="contact" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('http://res.cloudinary.com/ddota4fci/image/upload/o_84/v1474454415/Children_silhoutte_balloons_ge433c.jpg');">
	<div class="contact-content">
		<div class="contact-left-column">
			<h4>CONTACT US DIRECT</h4>
			<p><i class="fa fa-phone"></i>
			+44(0) 20 3488 1184
			</p>
			<p><i class="fa fa-envelope"></i>
			<%= link_to "hello@beaandco.com", "mailto:hello@beaandco.com" %>
			</p>
		</div>
		<div class="contact-right-column">
			<h4>SEND US A MESSAGE</h4>
      <form id="contact-form-home" action="http://formspree.io/luigi.grazioli.92@gmail.com" method="POST">
        <label>
          <span>Your Name</span><input class="contact-input" type="text" name="contact_name" style="color: black;">
        </label>
        <label>
          <span>Your Phone Number</span><input class="contact-input" type="tel" name="contact_phone" style="color: black;">
        </label>
        <label>
          <span>Referred by?</span><input class="contact-input" type="text" name="contact_ref" style="color: black;">
        </label>
        <label>
          <span>Your E-mail</span><input class="contact-input" type="email" name="_replyto" style="color: black;">
        </label>
        <label>
          <span>Your Message</span><textarea id="contact-message" name="body" style="color: black;"></textarea>
          <input class="contact-input" type="submit" value="Send" style="color: black;">
        </label>
      </form>
		</div>
	</div>
</div>
