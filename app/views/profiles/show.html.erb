<% content_for(:title) do %>
  <%= @user.first_name %>
<% end %>

<div class="wrapper">
  <div class="container">
    <div class="show-profile-details profile-card-white text-center">
      <% if @user == current_user %>
        <h2>Welcome <%= @user.first_name %>!</h2>
      <% else %>
        <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <% end %>
      <%= cl_image_tag(@user.photo, width: 100, height: 100, crop: :fill, class: "profile-avatar-large my-profile-avatar") %>
      <p><ul>
        <li class=>Name: <em><%= @user.first_name %> <%= @user.last_name %></em></li>
        <li class=>Email: <em><%= @user.email %></em></li>
        <li class=>Phone: <em><%= @user.phone_number %></em></li>
        <% if @user == current_user %>
          <%= link_to t("Edit Profile"), edit_profile_path, class: "btn btn-warning profile-edit-btn my-profile-btn" %>
        <% end %>
      </ul></p>
    </div>
  </div>

</div>
